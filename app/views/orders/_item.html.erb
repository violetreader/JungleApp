

<% if product = Product.find_by(id: order.product_id) %>
 

    <tr>
      <td>
        <%= image_tag product.image.tiny %>
      </td>
      <td>
        <h4><%= product.name %></h4>
      </td>
      <td>
        <p><%= product.description %></p>
      </td>
      <td>
        <%= @quantity_total %>
      </td>
      <td>
        <%= product.price %>
      </td>
    </tr>

<% end %>